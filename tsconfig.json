{
    "exclude": [
        "frontend",
        "node_modules",
        "functions",
        "shared",
    ],
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "dist",
    },
    "references": [
      {
        "path": "shared"
      }
    ]
}