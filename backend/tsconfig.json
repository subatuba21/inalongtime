{
    "exclude": [
        "frontend",
        "node_modules",
        "functions",
        "shared",
    ],
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "dist",
    }
}